{
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "esnext",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./out",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
      "require": ["tsconfig-paths/register"]
  }
}
